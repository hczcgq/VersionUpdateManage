<?xml version="1.0" encoding="utf-8"?>
<!--单列点击颜色变化-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" android:drawable="@color/color_item_click"/>
    <item android:state_pressed="true" android:drawable="@color/color_item_click"/>
    <item android:state_focused="true" android:drawable="@color/color_item_click"/>
    <item android:drawable="@android:color/white"/>
</selector>